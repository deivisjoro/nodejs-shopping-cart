<%- include('../../layouts/default/header.ejs') %>

    <div class="row products">
        <% products.forEach(product => { %>
            <div class="col-xs-12 col-md-4 p">
                <a href="/products/<%= product.category %>/<%= product.slug %>" class="pa">
                    <% if(product.image===""){ %>
                        <img src="/images/noimage.png" alt="imagen del producto" class="pimage">
                    <% }else{%>
                        <img src="/images/products/<%=product._id%>/<%=product.image%>" alt="imagen del producto" class="pimage">
                    <% } %>
                    
                </a>
                <h3><%=product.title%></h3>
                <h4>$<%= parseFloat(product.price).toFixed(2) %></h4>
                <a href="/products/<%= product.category %>/<%= product.slug %>" class="vd">Ver detalles</a>
            </div>
        <% }) %>
    </div>

<%- include('../../layouts/default/footer.ejs') %>