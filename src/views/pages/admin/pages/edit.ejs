<%- include('../../../layouts/admin/header.ejs') %>

    <h2 class="page-title d-flex justify-content-between">
        <span>Editar Pagina</span>
        <a href="/admin/pages" class="btn btn-success">
            Regresar a todas las paginas
        </a>
    </h2>
    <br>
    <form action="/admin/pages/edit/<%= page._id %>" method="post">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label for="title">Titulo</label>
                    <input type="text" id="title" name="title" placeholder="Titulo de la pagina" class="form-control" value="<%= page.title %>" autofocus>
                </div>
                <div class="form-group">
                    <label for="slug">Slug</label>
                    <input type="text" id="slug" name="slug" placeholder="Slug de la pagina" class="form-control" value="<%= page.slug %>">
                </div>
                <div class="form-group">
                    <label for="content">Contenido</label>
                    <textarea id="ta" name="content" placeholder="Contenido de la pagina" class="form-control" rows="7"><%= page.content %></textarea>    
                </div>                
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </form>

<%- include('../../../layouts/admin/footer.ejs') %>