<%- include('../../../layouts/admin/header.ejs') %>

    <h2 class="page-title d-flex justify-content-between">
        <span>Categorias</span>
        <a href="/admin/categories/add" class="btn btn-success">
            Agregar nueva categoria
        </a>
    </h2>
    <br>
    <div class="card">
        <div class="card-body">
            
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Categoria</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=>{ %>
                        <tr>
                            <td>
                                <%= category.title %>
                            </td>
                            <td>
                                <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-warning">Editar</a>
                            </td>
                            <td>                              
                                <a href="/admin/categories/delete/<%= category._id %>" class="btn btn-danger confirmarEliminacion">Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>    
                </tbody>
            </table>

        </div>
    </div>

<%- include('../../../layouts/admin/footer.ejs') %>